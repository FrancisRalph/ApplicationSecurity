@page
@model PrivacyModel
@{
    ViewData["Title"] = "Admin";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <br/>

    <h3 class="font-weight-normal mb-4">Error Triggers</h3>
    <ul class="list-group list-group-horizontal justify-content-center">
        <li class="list-group-item">
            <form asp-page-handler="Error400" method="post">
                <button class="btn btn-danger" type="submit">Error 400</button>
            </form>
        </li>
        <li class="list-group-item">
            <form asp-page-handler="Error403" method="post">
                <button class="btn btn-danger" type="submit">Error 403</button>
            </form>
        </li>
        <li class="list-group-item">
            <form asp-page-handler="Error404" method="post">
                <button class="btn btn-danger" type="submit">Error 404</button>
            </form>
        </li>
        <li class="list-group-item">
            <form asp-page-handler="Error500" method="post">
                <button class="btn btn-danger" type="submit">Error 500</button>
            </form>
        </li>
    </ul>
</div>
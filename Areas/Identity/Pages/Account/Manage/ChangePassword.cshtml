@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.OldPassword"></label>
                <div class="input-group">
                    <input asp-for="Input.OldPassword" id="oldPasswordInput" class="form-control"/>
                    <button class="btn btn-outline-secondary" type="button" data-password-toggle="oldPasswordInput"></button>
                </div>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.NewPassword"></label>
                <span id="passwordStrength"></span>
                <div class="input-group">
                    <input asp-for="Input.NewPassword" id="passwordInput" class="form-control"/>
                    <button class="btn btn-outline-secondary" type="button" data-password-toggle="passwordInput"></button>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" id="confirmPasswordInput" class="form-control"/>
                    <button class="btn btn-outline-secondary" type="button" data-password-toggle="confirmPasswordInput"></button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary form-control">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/passwordStrengthChecker.js"></script>
    <script src="~/js/passwordVisibilityToggle.js"></script>
}